---
import Navbar from '@components/Navbar.astro'

export interface Props {
  title: string
  currentPage: string
}

const { title, currentPage } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicons/favicon.ico" />
    <title>{title}Kru'Z</title>
  </head>
  <body>
    <img src="/images/bg.gif" class="main-background" />
    <Navbar currentPage={currentPage} />
    <main>
      <slot />
    </main>

    <style is:global lang="scss">
      @font-face {
        font-family: 'Roboto Slab';
        src: url('/fonts/RobotoSlab.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      :root {
        --primary-background-color: #000000;
        --primary-accent-color: #de3163;
        --secondary-accent-color: #ffa7c0;
        --primary-font-color: #ffffff;
        --primary-border: 1px solid var(--primary-accent-color);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background: transparent;

        &::selection {
          background-color: var(--primary-accent-color);
        }
      }

      html {
        @media (min-width: 1400px) {
          font-size: clamp(1rem, 0.0811rem + 1.0811vw, 2rem);
        }
      }

      body {
        font-family: 'Roboto Slab', serif;
        color: var(--primary-font-color);
        background-color: var(--primary-background-color);
      }

      a {
        color: var(--primary-font-color);
        text-decoration: none;
      }

      ul {
        list-style: none;
      }

      .button {
        display: inline-block;
        padding: 0.375rem 1rem;
        font-size: 1rem;
        margin: 0.5rem 1rem;
        font-weight: 500;
        text-transform: uppercase;
        border: none;
        cursor: pointer;
        border: var(--primary-border);
        text-align: center;
        background: linear-gradient(
          to bottom,
          var(--primary-accent-color) 0%,
          var(--primary-accent-color) 100%
        );
        background-position: 0 100%;
        background-repeat: repeat-x;
        background-size: 0px 0px;
        transition: background-size 0.2s;

        &:hover {
          background-size: 100% 100%;
        }
      }
    </style>
  </body>
</html>

<style lang="scss">
  body {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
    height: 100vh;
    position: relative;

    .main-background {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
      filter: brightness(0.3) blur(5px);
    }

    main {
      width: 80%;
      height: 90%;
      border: var(--primary-border);
      display: grid;
      place-items: center;
      overflow: hidden;
      overflow-y: auto;

      scrollbar-width: thin;
      scrollbar-color: var(--primary-accent-color) var(--secondary-accent-color);
      &::-webkit-scrollbar {
        margin-top: 1rem;
        width: 0.25rem;
      }
      &::-webkit-scrollbar-track {
        background: transparent;
      }
      &::-webkit-scrollbar-thumb {
        background-color: var(--primary-accent-color);
        margin-top: 1rem;
      }
    }
  }
</style>
