---
export interface Props {
  currentPage: string
}

const { currentPage } = Astro.props
---

<nav>
  <ul>
    <a href="/">
      <li class={currentPage === 'home' ? 'active' : ''}>Home</li>
    </a>
    <a href="/skills">
      <li class={currentPage === 'skills' ? 'active' : ''}>Skills</li>
    </a>
    <a href="/projects">
      <li class={currentPage === 'projects' ? 'active' : ''}>Projects</li>
    </a>
    <a href="/contact">
      <li class={currentPage === 'contact' ? 'active' : ''}>Contact</li>
    </a>
  </ul>
</nav>

<style lang="scss">
  nav {
    width: 15%;
    height: 90%;
    border: var(--primary-border);
    display: grid;
    place-items: center;

    ul {
      text-align: center;
      width: 75%;

      a {
        li {
          padding: 0.375rem;
          margin: 1.5rem 0;
          font-size: 1rem;
          text-transform: uppercase;
          font-weight: 600;
          letter-spacing: 1px;
          border: var(--primary-border);
          cursor: pointer;

          &.active {
            background-color: var(--primary-accent-color) !important;
          }

          background: linear-gradient(
            to bottom,
            var(--primary-accent-color) 0%,
            var(--primary-accent-color) 100%
          );
          background-position: 0 100%;
          background-repeat: repeat-x;
          background-size: 0px 0px;
          transition: background-size 0.2s;

          &:hover,
          &:focus {
            background-size: 100% 100%;
          }
        }
      }
    }
  }
</style>
