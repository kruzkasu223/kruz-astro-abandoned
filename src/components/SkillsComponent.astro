---
export interface Props {
  title: string
  skills: {
    title: string
    img: string
  }[]
}

const { skills, title } = Astro.props
---

<section>
  <h2>{title}</h2>
  <div>
    {
      skills.map((skill) => (
        <div>
          <img src={skill.img} title={skill.title} alt={skill.title} />
        </div>
      ))
    }
  </div>
</section>

<style lang="scss">
  section {
    border: var(--primary-border);
    width: 100%;
    max-width: 62rem;
    padding: 1rem;
    margin: 2rem auto;

    h2 {
      margin: 0 0.5rem 1rem;
      font-size: 1.25rem;
    }

    > div {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;

      > div {
        width: fit-content;
        margin: 0.25rem;
        height: 1.75rem;

        img {
          display: block;
          height: 100%;
        }
      }
    }
  }
</style>
