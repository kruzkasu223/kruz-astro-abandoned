---
import Layout from '@layouts/Layout.astro'
---

<Layout title="KruZ" currentPage="home">
  <main>
    <div class="main_div">
      <h1 class="main_title">
        Hey There üëãüèª{' '}
        <span class="span1">
          I'm <span class="span2">Krushang Kasundra</span>
        </span>
        aka <span class="span3">Kru'Z</span>
      </h1>

      <div class="image_wrapper">
        <img src="/images/hero.png" alt="Krushang's Photo" class="hero_image" />
      </div>

      <h3 class="sub_title">
        A Computer Engineer, Full-Stack Web Developer and Learning More...
      </h3>

      <div class="button_wrapper">
        <a class="button">My Skills</a>
        <a class="button">Contact Me</a>
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    .main_div {
      display: grid;
      padding: 2rem;
      text-align: center;

      .main_title {
        font-weight: normal;
        margin-bottom: 2rem;
        font-size: 1.75rem;

        .span1 {
          display: block;

          .span2 {
            font-size: 2rem;
            font-weight: 500;
            color: var(--secondary-accent-color);
            text-shadow: 0 0 0.05em var(--secondary-accent-color),
              0 0 0.2em #fe05e1, 0 0 0.3em #fe05e1;
          }
        }
        .span3 {
          font-weight: 500;
          font-size: 2rem;
          color: var(--primary-accent-color);
        }
      }

      .sub_title {
        color: var(--secondary-accent-color);
        font-weight: normal;
        margin: 2rem 0;
      }

      .image_wrapper {
        border-radius: 1rem;
        overflow: hidden;
        width: 70%;
        max-width: 350px;
        margin: 0 auto;

        .hero_image {
          display: block;
          width: 100%;
        }
      }

      .button_wrapper {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        margin: 0 auto;

        .button {
          width: 100%;
        }
      }
    }

    @media (min-width: 1026px) {
      .main_div {
        text-align: left;
        display: grid;
        align-items: center;
        justify-content: start;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(4, 1fr);
        padding: 3rem;

        .main_title {
          grid-column: 1/2;
          grid-row: 1/3;
          margin: 0;
        }

        .image_wrapper {
          grid-column: 2/3;
          grid-row: 1/5;
          justify-self: end;
          margin: 0;
          width: 80%;
          max-width: 100%;
        }

        .button_wrapper {
          justify-content: start;
          margin: 0;

          .button {
            margin: 0 2rem 0 0;
            width: auto;
          }
        }
      }
    }
  }
</style>
